@model EF_CodeFirst.Models.Product
@using EF_CodeFirst.HtmlHelpers;
@{
    ViewBag.Title = "Create Product";
}

<h2>Create Product</h2>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/dorm-data" }))
    {
<div class="row">
    <div class="col-md-6">
        @Html.LabelFor(row => row.ProductName)
        @Html.TextBoxFor(row => row.ProductName, new {@class = "form-control",
       placeholder = "Product Name" })
       
        @Html.ValidationMessageFor(row => row.ProductName)
    </div>
    @*Html.InputHelp("col-md-6","Price","Price")*@
<div class="col-md-6">
    <label for="Price">Price</label>
    @Html.TextBoxFor(row => row.Price, new
    { @class = "form-control", placeholder = "Price" })
    @Html.ValidationMessageFor(row => row.Price)

</div>
</div>
<div class="row">
    <div class="col-md-6">
        <label for="DateOfPurchase">DateOfPurchase</label>
        <input type="date"
               class="form-control"
               id="DateOfPurchase"
               name="DateOfPurchase"
               placeholder="DateOfPurchase" />
    </div>
    <div class="col-md-6">
        <label for="AvailabilityStatus">AvailabilityStatus</label>
        @Html.DropDownListFor(row => row.AvailabilityStatus, new List<SelectListItem>()
        {
            new SelectListItem() {Text="In Stock", Value = "InStock"},
            new SelectListItem() {Text="Out Of Stock", Value = "OutOfStock"},
        }, "Please select ...", new {@class = "form-control" })

       
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <label for="CategoryID">Category</label>
        @Html.DropDownListFor(row => row.CategoryID, new SelectList(ViewBag.Categories, "CategoryID",
       "CategoryName"), "Please Select ...", new { @class = "form-control" })
        @Html.ValidationMessageFor(row => row.CategoryID)

    </div>
    <div class="col-md-6">
        <label for="BrandID">Brand</label>

        @Html.DropDownListFor(row => row.BrandID, new SelectList(ViewBag.Brands, "BrandID", "BrandID"),
        "Please Select ...",new {@class = "form-control" })
        @Html.ValidationMessageFor(row => row.BrandID)
        @*<select class="form-control"
                id="BrandID"
                name="BrandID">
            <option value="">Please select ...</option>
            @foreach (var item in ViewBag.Brands)
            {
                <option value="@item.BrandID">@item.BrandName</option>
            }
        </select>*@
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <label class="form-check-label" for="Active">Active</label>
        <input type="checkbox"
               class="form-check-input"
               id="Active"
               name="Active"
               placeholder="Active"
               value="true" />
    </div>

</div>
@Html.ValidationSummary()
<button type="submit" class="btn btn-success">Create</button>
<a href="/products" class="btn btn-danger">Cancel</a>
}
