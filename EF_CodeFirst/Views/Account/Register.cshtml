@model EF_CodeFirst.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register","Account", FormMethod.Post))
 {
    <div class=row>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.UserName)
            @Html.TextBoxFor(temp => temp.UserName,
           new { placeholder = "UserName", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.UserName)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email,
           new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password,
           new { placeholder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.ConfirmPassword)
            @Html.PasswordFor(temp => temp.ConfirmPassword,
           new { placeholder = "ConfirmPassword", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Mobile)
            @Html.TextBoxFor(temp => temp.Mobile,
           new { placeholder = "Mobile", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Mobile)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.DateOfBirthday)
            @Html.TextBoxFor(temp => temp.DateOfBirthday,
           new { placeholder = "DateOfBirthday", @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(temp => temp.DateOfBirthday)
        </div>
        
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Address)
            @Html.TextBoxFor(temp => temp.Address,
           new { placeholder = "Address", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Address)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.City)
            @Html.TextBoxFor(temp => temp.Address,
           new { placeholder = "City", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.City)
        </div>
    </div>

    <button type="submit" class="btn btn-success">Register</button>
 }

